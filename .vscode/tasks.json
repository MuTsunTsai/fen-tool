{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "serve",
			"problemMatcher": [],
			"label": "pnpm: serve",
			"detail": "serve -L docs",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Gulp build",
			"type": "shell",
			"command": "pnpm build",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"revealProblems": "onProblem",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false
			},
			"problemMatcher": {
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^([^\\s].*)\\((\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
					"file": 1,
					"location": 2,
					"severity": 3,
					"code": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}