{
	"compilerOptions": {
		"baseUrl": "../src/",
		"allowJs": true,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"target": "ESNext",
		"types": [
			"mocha",
			"node"
		]
	},
	"include": [
		"./**/*.ts",
		"../src/**/*.d.ts"
	],
	"ts-node": {
		"files": true,
		"swc": true
	}
}
